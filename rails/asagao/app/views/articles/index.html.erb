<% @page_title = "articles of news" %>
<h1><%= @page_title %></h1>

<% if @articles.present? %>
    <% @articles.each do |article| %>
        <h2><%= article.title %></h2>
        <p>
        <%= truncate(article.body, length: 80) %>
        <%= link_to "Read More", article %>
        </p>
        <div class="article-footer">
            <%= article.released_at.strftime("%Y/%m/%d %H:%M") %>
        </div>
    <% end %>
<% else %>
    <p>No article.</p>
<% end %>

