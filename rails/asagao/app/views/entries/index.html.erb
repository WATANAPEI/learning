<% @page_title= @member ? @member.name + "さんのブログ" : "会員のブログ" %>
<h1><%= @page_title %></h1>

<% if current_member %>
    <ul class="toolbar">
        <%= menu_link_to "create blog entry", :new_entry %>
        <%= menu_link_to "voted entries", :voted_entries %>
    </ul>
<% end %>

<% if @entries.present? %>
    <% @entries.each do |entry| %>
        <h2><%= entry.title %></h2>
        <p><%= truncate(entry.body, length: 80) %>
    <%= link_to "read more", entry %></p>
        <%= render "footer", entry: entry %>
    <% end %>
    <%= paginate @entries %>
<% else %>
    <p>No entry</p>
<% end %>

